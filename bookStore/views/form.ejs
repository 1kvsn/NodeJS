<!DOCTYPE html>
<html>
  <head>
    <title>altCampus bookStore</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <main>
      <header>
        <h1><a href="/">bookStore</a></h1>
      </header>
      <!-- Form Section -->
      <section>
        <div class="form-container">
          <form action="/form" method="POST" class="form">
            <input type="text" name="title" placeholder="Enter a book title">
            <select name="author">
              <% authors.forEach(author => { %>
                <option value="<%= author._id %>" ><%= author.name %></option>
              <% }) %>
            </select>
            <textarea rows="4" cols="1" type="text" name="description" placeholder="enter book description"></textarea>
            <input type="text" name="tags" placeholder="enter tags">
            <input type="number" name="likes" placeholder="enter likes">
            <input type="submit" value="Submit">

          </form>
        </div>
      </section>
    </main>
  </body>
</html>
